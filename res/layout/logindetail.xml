<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/default_bg_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@id/nav_bar" layout="@layout/navbar" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout  android:orientation="vertical"  android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:textSize="@dimen/home_user_name_textsize" android:textColor="@color/home_user_name_color" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/login_description_margin_left" android:layout_marginTop="@dimen/review_item_user_shape" android:layout_marginRight="@dimen/login_description_margin_left" android:text="使用随影平台账号登录。" />
    <EditText android:layout_gravity="center_horizontal" android:id="@+id/user_name" android:ems="10" android:textColor="@color/darkgray"  android:layout_width="fill_parent"  android:layout_height="@dimen/login_button_height" android:layout_marginLeft="@dimen/login_description_margin_left" android:layout_marginTop="@dimen/arrow_layout_width" android:layout_marginRight="@dimen/login_description_margin_left" />
    <EditText android:layout_gravity="center_horizontal" android:id="@+id/password" android:ems="10" android:inputType="textPassword" android:textColor="@color/darkgray"  android:layout_width="fill_parent"  android:layout_height="@dimen/login_button_height" android:layout_marginLeft="@dimen/login_description_margin_left" android:layout_marginTop="@dimen/arrow_layout_width" android:layout_marginRight="@dimen/login_description_margin_left" />
    <Button android:layout_gravity="center_horizontal" android:id="@id/login_normol_btn" android:text="登录" android:textColor="@color/white" android:background="@drawable/button_selector" android:layout_width="fill_parent"  android:layout_height="@dimen/login_button_height" android:layout_marginLeft="@dimen/login_description_margin_left" android:layout_marginTop="@dimen/arrow_layout_width" android:layout_marginRight="@dimen/login_description_margin_left" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>