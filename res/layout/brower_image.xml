        <TextView android:textSize="@dimen/brower_image_num_textsize" android:textColor="@color/brower_num_textcolor" android:id="@id/review_num_textV" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@id/add_share_btn" android:layout_centerVertical="true" />
