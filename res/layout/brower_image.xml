        <TextView android:textSize="@dimen/brower_image_num_textsize" android:textColor="@color/home_user_tag_color" android:id="@id/work_tags_text_view" android:layout_width="@dimen/my_folllow_photographer_item_height" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_work_shape_margin" android:layout_marginRight="@dimen/general_space" android:singleLine="true" android:layout_toRightOf="@id/brower_icon_tag_imageV" android:layout_below="@id/work_des_textV" />
        <Button android:textSize="@dimen/nav_bar_button_textsize" android:textColor="@color/nav_btn_textcolor" android:id="@id/report_button" android:background="@null" android:layout_width="@dimen/nav_bar_height" android:layout_height="wrap_content" android:layout_marginRight="@dimen/general_space" android:text="举报" android:layout_alignBottom="@id/work_tags_text_view" android:layout_alignParentRight="true" />
